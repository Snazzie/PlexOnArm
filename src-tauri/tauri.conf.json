{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Plex On Tauri",
  "version": "1.0.0",
  "identifier": "com.plexontauri.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Plex On Tauri",
        "width": 1024,
        "height": 768,
        "visible": false,
        "maximized": false,
        "browserExtensionsEnabled": true,
        "zoomHotkeysEnabled": true,
        "devtools": true,
        "additionalBrowserArgs": "--enable-gpu --enable-accelerated-video-decode --enable-features=msVideoSuper --enable-features=edge-video-super-resolution"
      }
    ],
    "security": {
      "dangerousDisableAssetCspModification": true,
      "csp": {
        "default-src": [
          "'self'",
          "https://app.plex.tv"
        ],
        "img-src": [
          "'self'",
          "https://*.plex.tv",
          "data:",
          "blob:"
        ],
        "media-src": [
          "'self'",
          "https://*.plex.tv",
          "blob:"
        ],
        "connect-src": [
          "'self'",
          "https://*.plex.tv",
          "wss://*.plex.tv"
        ],
        "script-src": [
          "'self'",
          "https://*.plex.tv"
        ],
        "style-src": [
          "'self'",
          "https://*.plex.tv",
          "'unsafe-inline'"
        ],
        "frame-src": [
          "'self'",
          "https://*.plex.tv"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}